<%= form_for(task) do |f| %>
  <% if task.errors.any? %>
    <div id="error_explanation">
      <ul>
        <% task.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :content, 'タスク名' %>
  <%= f.text_field :content %>
  
  <%- f.label :status, 'ステータス' %>
  <%= f.select :status, {"未対応" => "yet", "対応中" => "doing", "対応完了" => "done"}  %>
  
  <%= f.submit '登録' %>
<% end %>